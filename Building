public class Building {
    public static void main(String[] args) {

        double Building_Angle = Math.toRadians(45.0); // 빌딩을 꼭대기를 본 각도(라디안으로 변환)

        double Observer_vision = 1.6; // 관측자의 눈 높이

        double Building_Distence = 30.0; // 관측자와 빌딩 사이의 거리

        double Building_Hight = Building_Distence + (Observer_vision * Math.tan(Building_Angle)); // 빌딩의 높이

        System.out.println(Building_Hight);

    }
}
